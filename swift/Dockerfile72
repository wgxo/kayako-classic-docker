FROM php:7.2-apache

RUN apt-get update \
    && DEBIAN_FRONTEND=noninteractive apt-get -y install build-essential autoconf libreadline-dev \
    libxpm4 libxpm-dev libjpeg-dev libfreetype6-dev libc-client-dev libssl-dev

RUN docker-php-ext-configure gd --with-gd --with-jpeg-dir --with-freetype-dir \
    && docker-php-ext-install gd
                                  
RUN mkdir -p /usr/share/man/man1 && apt-get update \
    && a2enmod rewrite \
    && DEBIAN_FRONTEND=noninteractive apt install -y mysql-client wget git procps unzip curl \
                      ${PHPIZE_DEPS} libmcrypt-dev libpng-dev \
    && pecl install xdebug && docker-php-ext-enable xdebug \
    && pecl install uopz && docker-php-ext-enable uopz \
    && pecl install mcrypt-1.0.1 && docker-php-ext-enable mcrypt \
    && docker-php-ext-install mysqli pdo_mysql zip opcache \
    && apt-get remove -y --purge ${PHPIZE_DEPS} \
    && curl -Lso- https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer; return 0 \
    && apt-get autoremove -y \
    && apt-get clean -y \
    && echo "memory_limit=-1" > /usr/local/etc/php/conf.d/memory.ini \
    && rm -rf /usr/src/* /tmp/*

WORKDIR /var/www/html
RUN echo "[mysql]\nhost=aladdin_db_1\nuser=root\npassword=OGYxYmI1OTUzZmM\ndatabase=swift\n\n[mysqladmin]\nhost=aladdin_db_1\nuser=root\npassword=OGYxYmI1OTUzZmM\n\n[mysqldump]\nhost=aladdin_db_1\nuser=root\npassword=OGYxYmI1OTUzZmM\n" > ~/.my.cnf
RUN echo 'echo "*** TO INSTALL SWIFT USE ***\n\nphp ./console.setup.php Trilogy \"http%3A%2F%2Fkayako-dev%2F\" Kayako Admin admin admin virlatinus%40gmail.com\n\n"' > ~/.bashrc
