FROM php:7.2-apache

RUN mkdir -p /usr/share/man/man1 && apt-get update \
    && a2enmod rewrite \
    && apt install -y mysql-client wget git procps unzip curl \
                      ${PHPIZE_DEPS} libmcrypt-dev libpng-dev \
    && pecl install xdebug && docker-php-ext-enable xdebug \
    && pecl install uopz && docker-php-ext-enable uopz \
    && pecl install mcrypt-1.0.1 && docker-php-ext-enable mcrypt \
    && docker-php-ext-install mysqli pdo_mysql gd zip opcache \
    && apt-get remove -y --purge ${PHPIZE_DEPS} \
    && curl -Lso- https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer; return 0 \
    && apt-get autoremove -y \
    && apt-get clean -y \
    && echo "memory_limit=-1" > /usr/local/etc/php/conf.d/memory.ini \
    && rm -rf /usr/src/* /tmp/*

WORKDIR /var/www
